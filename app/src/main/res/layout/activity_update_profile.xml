<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Update_Profile">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/profileUpdate_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/baseline_arrow_back_24"
            />


        <TextView
            android:text="Update Profile"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"

        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           android:background="@color/black"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                  android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"

                    android:text="Kalash bharti"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_gravity="end"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/img"
                    />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="Full Name"/>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="Name"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="Phone Number"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="999999999"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="Email Address"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="iam@bikelover.com"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="Address"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="Enter Full Address"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="Aadhar Number"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="Enter Aadhar Number"/>

    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_marginBottom="15dp"
            android:text="License Details"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:padding="5dp"
            android:background="@drawable/input_background1"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:textColorHint="@color/grey"
            android:hint="license Details"/>

    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_aap_2"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"

            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>